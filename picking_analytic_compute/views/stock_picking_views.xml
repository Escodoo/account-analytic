<odoo>

    <record model="ir.ui.view" id="picking_analytic_type_form_view">
        <field name="name">stock.picking.type.form (in picking_analytic_compute)</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence_code']" position="after">
                <field name="compute_analytic_value" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="picking_analytic_form_view">
        <field name="name">stock.picking.form (in picking_analytic_compute)</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_create_lots']" position="after">
                <field name="has_analytic_line" invisible="1" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_analytic_line_tree"
                    class="oe_stat_button"
                    icon="fa-dollar"
                    type="object"
                    string="Analytic Line Operations"
                    help="List view of analytic line operations"
                    attrs="{'invisible': [('has_analytic_line', '=', False)]}"
                >
                </button>
            </xpath>
            <xpath
                expr="//field[@name='move_ids_without_package']/tree/field[@name='quantity_done']"
                position="after"
            >
                <field name="picking_line_cost" optional="hidden" />
            </xpath>
        </field>
    </record>


</odoo>
